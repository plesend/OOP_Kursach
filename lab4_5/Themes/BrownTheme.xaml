<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Стиль для специальной кнопки -->
    <Style x:Key="SpecialButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#856a4a"/>
        <Setter Property="Foreground" Value="#edddca"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <Style x:Key="LittleButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#1f1f1f"/>
        <Setter Property="Foreground" Value="#c9c9c9"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Margin" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    <!-- Стиль для обычных кнопок -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#ad9374"/>
        <Setter Property="Foreground" Value="#856a4a"/>
        <Setter Property="BorderBrush" Value="#856a4a"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="150"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#856a4a"/>
                <Setter Property="Foreground" Value="#edddca"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль для текстовых полей -->
    <Style x:Key="BaseTextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Background" Value="#ad9374"/>
        <Setter Property="Foreground" Value="#856a4a"/>
        <Setter Property="BorderBrush" Value="#856a4a"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <!-- Стиль для ComboBox -->
    <Style x:Key="BaseComboBoxStyle" TargetType="ComboBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Background" Value="#ad9374"/>
        <Setter Property="Foreground" Value="#856a4a"/>
        <Setter Property="BorderBrush" Value="#856a4a"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <!-- Стиль для TextBlock -->
    <Style x:Key="BaseTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#edddca"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <!-- Стиль для Separator -->
    <Style x:Key="BaseSeparatorStyle" TargetType="Separator">
        <Setter Property="Background" Value="#856a4a"/>
        <Setter Property="Margin" Value="5,10"/>
    </Style>

</ResourceDictionary>
