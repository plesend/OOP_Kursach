<UserControl x:Class="lab4_5.Controls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Height="35" Width="137">
    <Border CornerRadius="10" Background="#A578BB" Cursor="Hand" Margin="5">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
            <TextBlock Text="🛒" FontSize="8" Margin="5,0"/>
            <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="10" Foreground="White"/>
        </StackPanel>
    </Border>
</UserControl>
